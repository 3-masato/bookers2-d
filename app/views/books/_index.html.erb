<section class="mb-4">
  <h2><%= heading ||= "Books" %></h2>
  <% if books.size == 0 %>
    <% unless (empty_message ||= "").empty? %>
      <p class="text-center"><%= empty_message %></p>
    <% end %>
  <% else %>
    <div class="my-2">
      <span>Sort by: </span>
      <%= link_to 'Recently posted', books_path(latest: "true") %> |
      <%= link_to 'Most rated', books_path(star_count: "true") %>
    </div>
    <div class="table-responsive">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th data-col="avatar"></th>
            <th data-col="title">Title</th>
            <th data-col="opinion">Opinion</th>
            <th data-col="rest" colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "books/row", collection: books, as: :book %>
        </tbody>
      </table>
    </div>
  <% end %>
</section>
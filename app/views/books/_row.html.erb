<tr>
  <td data-col="avatar">
    <%= link_to book.user do %>
      <%= image_tag book.user.get_profile_image, size: "32x32" %>
    <% end %>
  </td>
  <td data-col="title">
    <%= link_to book.title, book %>
  </td>
  <td data-col="opinion">
    <%= book.body %>
  </td>
  <td data-col="category">
    <%= render "books/category", book: book %>
  </td>
  <td data-col="fav">
    <div id="fav-<%= book.id %>">
      <%= render "favorites/btn", book: book %>
    </div>
  </td>
  <td data-col="comment">
    <%= render "book_comments/count", book: book %>
  </td>
  <td data-col="rate">
    <%= render "books/rate/static", book: book %>
  </td>
</tr>

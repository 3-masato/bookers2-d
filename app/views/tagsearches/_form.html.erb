<div class="d-flex justify-content-center align-items-center my-1">
  <% if user_signed_in? %>
    <div class="form-body">
      <%= form_with url: tagsearches_search_path, method: :get, local: true, class: "d-flex justify-content-center align-items-center flex-md-row flex-column" do |f| %>
        <%= f.text_field :content, class: "form-control form-control-sm mx-1 mb-2 mb-md-0" %>
        <%= f.submit "Tag Search", class: "btn btn-info btn-sm mx-1" %>
      <% end %>
    </div>
  <% end %>
</div>